<UserControl x:Class="CodingDojo6.Views.MessageBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CodingDojo6.Views"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image Source="{Binding Symbol}" Margin="10" ></Image>
        <Border BorderBrush="Black" BorderThickness="4" CornerRadius="9" Margin="4" Visibility="{Binding Visible}">
            <Label Height="50" VerticalAlignment="Center" Margin="7" Content="{Binding Message}"></Label>
        </Border>
        
    </Grid>
</UserControl>
